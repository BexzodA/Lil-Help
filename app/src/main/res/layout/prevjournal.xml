<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="189dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/accompQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are some things you have accomplished?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accompAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What things are you looking forward to?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forwardAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/gratefulQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What things are you grateful for?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gratefulAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/journal_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jorunal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>