<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/PrevJHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/home_button_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/PrevJHome"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/PrevJHome"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/accompQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:layout_gravity="center"
                android:text="What are some things you have accomplished?"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accompAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="What things are you looking forward to?"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forwardAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:fontFamily="@font/roboto_light"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/gratefulQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:layout_gravity="center"
                android:text="What things are you grateful for?"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gratefulAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_light"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/journal_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"
                android:text="Journal"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jorunal_text"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>