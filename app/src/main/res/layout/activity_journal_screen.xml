<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".JournalScreen">

    <EditText
        android:id="@+id/journal_screen_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        />

    <Button
        android:id="@+id/homeButtonJournalScreen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/home_icon"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="11dp" />

    <TextView
        android:id="@+id/journal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeButtonJournalScreen"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_light"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/journal_date"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_light"
        android:text="Record your day here!"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/journal_screen_ans"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_light"
        android:text="Save" />

    <Button
        android:id="@+id/AnswerQuestionsButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/arrow_l"
        android:fontFamily="@font/roboto_light" />
</RelativeLayout>